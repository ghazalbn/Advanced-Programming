@page "/"
@using System.Linq;
@inject Repository Repo;
<div class="container">
    <div class="row" style="margin-top: 100px;">
        <div class="col-5"></div>
        <div class="col">
            <button  @onclick="OnClick">Show Books</button>
        </div>
            @if(Books != null) 
            {
                <div class="col">
                @foreach (var book in Books)
                {
                    <p>@book</p>
                }
                </div>
            }
    </div>
    <div class="row" style="margin-top: 100px;">
        <div class="col-5"></div>
        <div class="col">
            <button  @onclick="Count">Count</button>
            <div class="col">
                <p>@count</p>
            </div>
        </div>
    </div>
</div>

@code{
    private List<String> Books;
    private int count;
    private async Task OnClick()
        => Books = await Repo.GetBooks();
    private void Count()
        => count++;
}


